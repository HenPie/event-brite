<div class="card mx-auto mt-5" style="width: 18rem;">
  <div class="card-header">
    <%= @user.first_name %> <%= @user.last_name %>
  </div>
  <h3>Avatar actuel</h3>
  <%if @user.avatar.attached?%>
    <%= image_tag @user.avatar, alt: 'avatar' %>
  <%else%>
    <%= image_tag ("/loris.jpg") %>
  <%end%>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Email: <%= @user.email %></li>
    <li class="list-group-item">Description: <%= @user.description %></li>
  </ul>
  <p><%= link_to "Modifier mes informations", edit_user_registration_path, :class => "btn btn-info" %></p>
  <h3>Changer d'avatar ?</h3>
  <%= form_tag user_avatars_path(@user), multipart: true do %>
    <%= file_field_tag :avatar %>
    <%= submit_tag "mettre à jour" %>
  <% end %>
  
</div>

<div class="container">
  <!-- Example row of columns -->
  <div class="row">
  <% @events.each do |event| %>
    <div class="card mx-auto mt-2" style="width: 17rem;">
      <div class="card-body">
        <h5 class="card-title"> <%= event.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= event.location %></h6>
        <p style="font-weight: bold;">A quoi il faut vous attendre durant cet évènement ?</p>
        <p class="card-text"><%= event.description %></p>
        <p><%= link_to "Voir plus sur l'évènement", event_path(event.id), :class => "btn btn-info" %></p>
      </div>
    </div>
  <% end %>
  </div>
  <hr>
</div> 
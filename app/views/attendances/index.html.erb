<div class="container">
    <!-- Example row of columns -->
    <div class="row text-center justify-content-center mt-3">
      <h3 class="col-12"><%= @event.title %></h3>
      <p class="col-12"><%= @event.description %></p>
      <p class="col-12 mt-2"><%= link_to "Éditer mon évènement", edit_event_path(id: @event.id), :class => "btn btn-info" %></p>
      <ul class="list-group list-group-flush mt-3 col-4">
        <% @attendance_array.each do |attendance| %>
          <li class="list-group-item">
            <%= attendance.user.first_name %> <%= attendance.user.last_name %><br/>
            <span class="text-muted"><%= attendance.user.email %></span>
          </li>
        <% end %>
      </ul>
    </div>
  <hr>
</div> <!-- /container -->